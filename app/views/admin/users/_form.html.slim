- load 'ab_admin/views/inputs/uploader_input.rb'
= admin_form_for @user do |f|
  = input_set t('admin.form.base') do
    = f.input :email
    = f.input :first_name
    = f.input :last_name
    = f.input :patronymic
    = f.input :phone
    = f.input :skype
    = f.input :web_site
    = f.input :address

    = f.input :user_role_id, collection: UserRoleType.all, include_blank: false, as: :radio_buttons, item_wrapper_class: 'inline'

    = f.input :birthday, include_blank: true
    = f.input :gender, collection: GenderType.all, include_blank: false, as: :radio_buttons, item_wrapper_class: 'inline'

    = f.input :time_zone, fancy: true, priority: %w(Moscow Kyiv).map{|t| ActiveSupport::TimeZone[t] }
    = f.input :locale, collection: Globalize.available_locales
    = f.input :bg_color, as: :color

    = f.input :password, input_html: {autocomplete: 'off'}
    = f.input :password_confirmation, input_html: {autocomplete: 'off'}


  = f.input :avatar, as: :uploader
  /= input_set t('admin.avatar') do
    .fileupload.image_asset_type.one_asset
      .fileupload-list.clearfix
        /= render partial: "admin/fileupload/#{asset_template}", collection: assets
      .fileupload-list
      .file-types
        .fileupload-button.pull-left
          .btn Select files
          = file_field_tag 'data', id: 'fileupload_avatar', multiple: nil
        .fileupload-edit-button.btn.pull-left= t('admin.actions.edit.link')

        .file-types-info
          span.file_title== 'JPG PNG. '
          span.file_max_size== "#{t('admin.fileupload.max_size')}: <b>2</b> MB"




    /= f.file_field :image, multiple: true, name: 'user[data]'
    /= f.attach_file_field :avatar, file_max_size: 2, edit_meta: true

  = f.hidden_field :fileupload_guid if f.object.new_record?

  = f.save_buttons
